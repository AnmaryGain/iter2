<%- include('../partials/wideHeader'); %>
<%- include('../partials/wideNav'); %>


<div class="bg-image" style="background-image: url('/images/twocourts.jpg');  height:110vh; ">
    <div class="container-fluid pt-5">
        <h1 class="display-1 p-5 text-center text-light font-weight-bold">Profile Info</h1>
    </div>


<body>
    <main class="container">
        <div class="row align-items-md-stretch">
            <div class="h-100 p-5 text-white text-center bg-transparent border rounded-3">
                <h2>Update Profile</h2>
                <h4>I told you we would make this easy.  You can <span style="color:black">fill in this form</span> to <span style="color:black">change you personal info</span> any time.  Remember this is what the world sees.  Make a statement!</h4>
            </div>
        
        <div class="p-5 mt-2 mb-4 bg-transparent border rounded-3">
            <div class="container-fluid">
                <form method='post' action='notsecret'>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Name</span>
                        </div>
                        <input type="text" name="apptName" id="apptLoc" class="form-control" value="<%= user.trainer_seeker_name %>" readonly>
                      </div>
                      <input type="hidden" name='id' value="<%= user._id %>">
                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Greeting</span>
                        </div>
                        <input type="text" name="apptGreet" id="apptLoc" class="form-control" value="<%= profile.greeting %>">
                      </div>

                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Skill Most Valued</span>
                        </div>
                        <input type="text" name="apptSkill" id="apptLoc" class="form-control" value="<%= profile.skill %>">
                      </div>

                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Level of Athletisism</span>
                        </div>
                        <input type="text" name="apptAthletic" id="apptLoc" class="form-control" value="<%= profile.athletic %>">
                      </div>

                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Slogan - the words you live by</span>
                        </div>
                        <input type="text" name="apptSlogan" id="apptLoc" class="form-control" value="<%= profile.slogan %>">
                      </div>

                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Favorite Food</span>
                        </div>
                        <input type="text" name="apptFood" id="apptLoc" class="form-control" value="<%= profile.favFood %>">
                      </div>

                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Favorite Tennis Player</span>
                        </div>
                        <input type="text" name="apptPlayer" id="apptLoc" class="form-control" value="<%= profile.favTennisPlayer %>">
                      </div>

                      <div class="input-group mb-2">
                        <div class="input-group-append">
                          <span class="btn btn-secondary">Favorite Movie</span>
                        </div>
                        <input type="text" name="apptMovie" id="apptLoc" class="form-control" value="<%= profile.favMovie %>">
                      </div>
                      <input type="submit" class="btn btn-primary" value="Update Profile"/>
                </form>
                
            </div>
        </div>
    </div>
    </main>
</body>
</div>
            